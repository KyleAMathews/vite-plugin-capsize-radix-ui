{
  "name": "vite-plugin-capsize-radix",
  "description": "Great Typography with Radix & Capsize",
  "version": "0.1.3",
  "author": "Kyle Mathews <mathews.kyle@gmail.com>",
  "dependencies": {
    "@capsizecss/core": "^4.1.3",
    "@capsizecss/metrics": "^3.6.2",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@capsizecss/unpack": "^2.4.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "shx": "^0.3.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  },
  "directories": {
    "example": "example"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.ts"
      },
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "capsizecss",
    "radix-ui",
    "typography",
    "vite-plugin"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "pnpm run clean && tsup --external @capsizecss/core --external mustache --external @capsizecss/metrics",
    "check": "tsc",
    "clean": "shx rm -rf dist *.d.ts",
    "lint": "eslint src tests --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true
  },
  "types": "./dist/index.d.ts"
}
