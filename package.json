{
  "name": "vite-plugin-capsize-radix",
  "description": "Great Typography with Radix & Capsize",
  "version": "0.1.0",
  "author": "Kyle Mathews <mathews.kyle@gmail.com>",
  "dependencies": {
    "@capsizecss/core": "^4.1.0",
    "@capsizecss/metrics": "^3.4.0",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@capsizecss/unpack": "^2.1.0",
    "@types/mustache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  },
  "directories": {
    "example": "example"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.ts"
      },
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "capsizecss",
    "radix-ui",
    "typography",
    "vite-plugin"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "pnpm run clean && tsup --external @capsizecss/core --external mustache --external @capsizecss/metrics",
    "check": "tsc",
    "clean": "shx rm -rf dist *.d.ts",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true
  },
  "types": "./dist/index.d.ts"
}
